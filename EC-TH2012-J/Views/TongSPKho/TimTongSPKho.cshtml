@model IEnumerable<WebNhaHangOnline.Models.TongSPKho>

<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng còn lại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td class="center">@item.IDSP</td>
                <td class="center">@item.SL</td>
                <td class="center">
                    <a class="btn btn-info" href="@Url.Action("EditKhos", "KhoSP", new { id = item.IDKho })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteSPKho", "KhoSP")","@item.IDKho")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
