@using WebNhaHangOnline.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<DatBan>

<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th>@Html.DisplayNameFor(model => model.First().TableName)</th>
            <th>@Html.DisplayNameFor(model => model.First().UserName)</th>
            <th>@Html.DisplayNameFor(model => model.First().TotalPerson)</th>
            <th>@Html.DisplayNameFor(model => model.First().StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().MaBan)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.BookingId" />
                </td>
                <td class="center">@item.TableName</td>
                <td class="center">@item.UserName</td>
                <td class="center">@item.TotalPerson</td>
                <td class="center">@item.StartDate</td>
                <td class="center">@item.EndDate</td>
                <td class="center">@item.MaBan</td>
                <td class="center">
                    @*<a class="btn btn-info" href="@Url.Action("EditLoaiBan", "DatBanAdmin", new { id = item.MaBan })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteLoaiBan", "DatBanAdmin")","@item.MaBan")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-6 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimLoaiBan", "LoaiBan", new { key = @ViewBag.key, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="result-counter">
                Có tât cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.pagination-holder -->